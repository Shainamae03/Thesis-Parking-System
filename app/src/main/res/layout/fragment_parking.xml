<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menus"
    tools:context=".ParkingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARKING LOTS"
            android:textSize="40sp"
            android:fontFamily="@font/bitter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />



        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@color/transparent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:elevation="10dp">

                    <ImageButton
                        android:id="@+id/claw"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/button_claw" />

                    <ImageButton
                        android:id="@+id/chtm"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/button_chtm"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_toRightOf="@+id/claw"/>

                    <ImageButton
                        android:id="@+id/cn"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/button_con"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_toRightOf="@+id/chtm"/>

                    <ImageButton
                        android:id="@+id/hp"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/button_marcelo"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_toRightOf="@+id/cn"/>


                </RelativeLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking Monitoring"
                android:textSize="25sp"
                android:fontFamily="@font/bitter_bold"
                android:textColor="@color/black"
                android:textAlignment="center"/>


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/pdatabase"
                    android:layout_width="400dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/button_parking_db"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"/>

                <ImageButton
                    android:id="@+id/parkinghistory"
                    android:layout_width="400dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/pdatabase"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_parking_history" />


            </RelativeLayout>


        </LinearLayout>





    </LinearLayout>

</FrameLayout>