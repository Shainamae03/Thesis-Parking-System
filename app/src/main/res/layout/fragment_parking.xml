<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingFragment"
    android:background="@drawable/bg_menus">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking Lots"
            android:textSize="50dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />



        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/transparent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:elevation="10dp">

                    <ImageButton
                        android:id="@+id/CLAW"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/button_claw"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>

                    <ImageButton
                        android:id="@+id/CoN"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/button_con"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/CLAW"
                        android:background="@color/transparent"/>

                    <ImageButton
                        android:id="@+id/CHTM"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/button_chtm"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/CoN"
                        android:background="@color/transparent"/>

                    <ImageButton
                        android:id="@+id/Marcelo"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/button_marcelo"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@+id/CHTM"
                        android:background="@color/transparent"/>



                </RelativeLayout>



            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/parking_monitoring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking Monitoring"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_extrabold"
                android:textColor="@color/black"
                android:textAlignment="center"/>



            <ImageButton
                android:id="@+id/parking_logs"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/parking_monitoring"
                android:background="@color/transparent"
                android:layout_centerInParent="true"
                android:src="@drawable/button_parking_history"
                />


        </RelativeLayout>





    </LinearLayout>

</FrameLayout>