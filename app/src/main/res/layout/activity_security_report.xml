<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menus"
    tools:context=".SecurityReport">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/bitter_bold"
        android:gravity="center"
        android:text="Security Report"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/question2"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button5"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/question3"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageButton
        android:id="@+id/button7"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button6"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:src="@drawable/question5"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageButton
        android:id="@+id/back3_btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="BACK"
        android:src="@drawable/cancel_black"
        android:background="@android:color/transparent"
        android:layout_below="@+id/button7"
        tools:ignore="HardcodedText" />

</RelativeLayout>