<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menus"
    android:orientation="vertical"
    tools:context=".Notification">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:text="PARKING PASS INFORMATION"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_extrabold"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Plate No."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="MODEL:"
        android:textColor="@color/black"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="20dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="COLOR:"
        android:textColor="@color/black"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="20dp"
        tools:ignore="HardcodedText,MissingConstraints"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="CLIENT :"
        android:textColor="@color/black"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="20dp"
        tools:ignore="HardcodedText,MissingConstraints"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="DEPARTMENT :"
        android:textColor="@color/black"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="20dp"
        tools:ignore="HardcodedText,MissingConstraints"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="DATE AND TIME OF ENTRY :"
        android:textColor="@color/black"
        android:layout_below="@+id/textView13"
        android:layout_marginLeft="20dp"
        tools:ignore="HardcodedText,MissingConstraints"/>

    <Button
        android:id="@+id/Approve_btn"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:backgroundTint="#44dfdf"
        android:text="Approve to Enter"
        android:textColor="@color/black"
        android:layout_below="@+id/textView14"
        android:layout_marginLeft="40dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/Deny_Btn"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginLeft="42dp"
        android:backgroundTint="#44dfdf"
        android:text="Decline To Enter"
        android:textColor="@color/black"
        android:layout_below="@+id/textView14"
        android:layout_toRightOf="@+id/Approve_btn"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_launcher_background"
        android:scaleType="fitCenter"/>


</RelativeLayout>