        <activity android:name=".ClientInfo" />
        <activity android:name=".GuestActivity" />
        <activity android:name=".Menu" />
        <activity android:name=".QRCodeScanner" />
        <activity android:name=".SecurityReport" />
        <activity android:name=".ParkingLot" />
        <activity android:name=".history" />
        <activity android:name=".Guestlog" />
        <activity android:name=".ForgotAdminPass" />
        <activity android:name=".Client_history_table" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>